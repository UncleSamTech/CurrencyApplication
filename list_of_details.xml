<?xml version="1.0" encoding="utf-8"?>
<!--This is the xml file that will be inflated in our adapter class and rendered on our list view-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--This is the text view widget showing the country-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_name_of_country"
        tools:text="@string/msg_text_view"
        android:layout_margin="@dimen/activity_lay_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        />
    <!--This is a nested view group holding another set of views-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_lay_margin"
        android:layout_marginRight="@dimen/activity_lay_margin"
        android:layout_marginBottom="@dimen/activity_lay_margin"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <!--This is the image view widget showing the icon of currency-->
        <ImageView
            android:layout_width="@dimen/image_height_icon"
            android:layout_height="@dimen/image_height_icon"
            android:layout_marginRight="@dimen/image_height_right_margin"
            android:contentDescription="@string/msg_currency_icon"
            android:src="@drawable/ic_action_money"/>

        <!--This is the text view widget showing the currency-->
        <TextView
            android:layout_width="@dimen/image_height_margin"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/text_view_name_of_currency"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="@string/msg_text_view"
            android:layout_marginRight="@dimen/activity_lay_margin"/>
        <!--This is the image view widget showing the icon of language-->

        <ImageView
            android:layout_width="@dimen/image_height_icon"
            android:layout_height="@dimen/image_height_icon"
            android:layout_marginRight="@dimen/image_height_right_margin"
            android:contentDescription="@string/msg_lang_icon"
            android:src="@drawable/ic_action_language"/>

        <TextView
            android:layout_width="@dimen/image_height_margin"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:id="@+id/text_view_name_of_language"
            tools:text="@string/msg_text_view"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            />


    </LinearLayout>


</LinearLayout>
